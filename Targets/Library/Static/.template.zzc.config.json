{
	"paths": {
		"zzc": "../../../Src/",
		"tmp": "./Build/Tmp",
		"cpp": "./Build/Cpp",
		"obj": "./Build/Obj",
		"exe": "./Build/libBJpeg.so"
	},
	"compiler": {
		"preprocess": ["gcc", {"var":"CPPFLAGS"}, "-E", "-o", {"arg":"out"}, {"arg":"in"}],
		"obj": ["g++", "-Dfun=", {"var":"CPPFLAGS"}, {"var":"CXXFLAGS"}, "-c", "-o", {"arg":"out"}, {"arg":"in"}],
		"target": ["ar", "rcs", {"arg":"out"}, {"arg":"in"}]
	},
	"vars": {
		"CFLAGS": [],
		"CPPFLAGS": ["-DMAIN_TARGET_DECODE", "-DCL_TARGET_OPENCL_VERSION=300", "-Dself=(*this)", "-Dpack=struct __attribute__((packed))", {"var": "OpenCL_include"}],
		"CXXFLAGS": ["-Werror", "-pedantic", "-std=c++23", "-fmodules-ts"],
		"LDFLAGS": [{"var": "OpenCL_link"}],
		"OpenCL_include": "-I$$cl_include$$",
		"OpenCL_link": ["-L$$cl_lib$$", "-lOpenCl"]
	},
	"nocompile": false,
	"noinc": true}