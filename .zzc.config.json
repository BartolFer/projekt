{
	"paths": {
		"zzc": "./Src/",
		"tmp": "./Build/Tmp",
		"cpp": "./Build/Cpp",
		"obj": "./Build/Obj",
		"exe": "./Build/a.exe"
	},
	"compiler": {
		"preprocess": ["gcc", "-E", "-o", {"arg":"out"}, {"arg":"in"}],
		"obj": ["g++", {"var":"CPPFLAGS"}, {"var":"CXXFLAGS"}, "-c", "-o", {"arg":"out"}, {"arg":"in"}],
		"target": ["g++", {"var":"CXXFLAGS"}, {"var":"CPPFLAGS"}, "-o", {"arg":"out"}, {"arg":"in"}, {"var":"LDFLAGS"}]
	},
	"vars": {
		"CFLAGS": [],
		"CPPFLAGS": ["-DCL_TARGET_OPENCL_VERSION=300", "-DTESTING", "-DDEBUG", "-Dself=(*this)", "-Ddepend(...)=", "-Drecord=struct __attribute__((packed))"],
		"CXXFLAGS": ["-Werror", "-pedantic", "-std=c++23", "-fmodules-ts", "-IC:/Programs/Cuda/include/"],
		"LDFLAGS": ["-LC:/Programs/Cuda/lib/x64/", "-lOpenCl"]
	}
}